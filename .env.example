# =============================================================================
# Hybrid AI Stack - Environment Configuration
# =============================================================================

# API Keys (Cloud Models)
# -----------------------
ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here

# Local Model Configuration
# -------------------------
OLLAMA_URL=http://localhost:11434
USE_LOCAL_FOR_SIMPLE=true
COMPLEXITY_THRESHOLD=0.5

# For Mac users running OLLAMA locally
# OLLAMA_URL=http://host.docker.internal:11434

# n8n Configuration
# -----------------
POSTGRES_USER=root
POSTGRES_PASSWORD=password
POSTGRES_DB=n8n

N8N_ENCRYPTION_KEY=super-secret-key-change-this
N8N_USER_MANAGEMENT_JWT_SECRET=even-more-secret-change-this
N8N_DEFAULT_BINARY_DATA_MODE=filesystem
N8N_HOST=0.0.0.0
N8N_PORT=5678

# Redis Configuration
# -------------------
REDIS_HOST=redis
REDIS_PORT=6379

# API Gateway Configuration
# -------------------------
GATEWAY_PORT=8080
GATEWAY_HOST=0.0.0.0

# Monitoring Configuration
# ------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Deployment Configuration
# ------------------------
DEPLOYMENT_TIER=2  # 1=Budget, 2=Standard, 3=Performance, 4=GPU
CLOUD_PROVIDER=aws  # aws, gcp, docker

# Logging
# -------
LOG_LEVEL=INFO
ENABLE_TASKWARRIOR_LOGGING=true
